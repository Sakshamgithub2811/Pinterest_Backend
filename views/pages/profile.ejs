<%- include('../partials/header') %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white">
    <form id="uploadForm" hidden action="/pages/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="profilePic" id="uploadInput">
    </form>

    <div class="profdets flex flex-col items-center py-10">
        <div class="relative">
            <span id="uploadIcon" class="  w-10 h-10 bottom-0 right-0 flex items-center justify-center bg-zinc-700 rounded-full absolute material-symbols-outlined">
                border_color
            </span>
             <div class="w-32 h-32 bg-zinc-200 rounded-full ">
                
             
            <img class="w-full h-full object-cover rounded-full overflow-hidden" src="/upload/<%= user.profileImage %>">
        </div>
        </div>
        <h1 class="text-3xl font-semibold ">saksham shrivastava</h1>
        <h3 class="text-md">@username</h3>
        <a href="/pages/edit" class="mt-5 px-5 py-1 bg-zinc-700 rounded-full text-xs font-semibold">edit</a>
         <a href="/pages/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold">Add New Post</a>
       
    </div>
    <div class="cards flex flex-wrap gap-10 px-10">
        <div class="card">
            
           
            <div class="w-52 h-52 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/upload/<%= user?.posts[0]?.image %>" />
            </div>
         
            <a href="/pages/allPins" class="text-xl font-semibold mt-3">All Pins</a> 
            <h5 class="text-sm font-medium"><%= user.posts.length%> Pins</h5>
        </div>
        
    </div>
</div>
<script>
    document.getElementById("uploadIcon").addEventListener('click',function(){
        console.log("clicked");
        document.getElementById("uploadInput").click();
    });
    document.getElementById('uploadInput').addEventListener('change',function(){
        document.getElementById("uploadForm").submit();
    })  
</script>

<%- include('../partials/footer') %>