<%- include('../partials/header') %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl"> Create a new post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/pages/createPost" method="post" enctype="multipart/form-data">

        <input  class="block w-1/3 bg-white text-black px-3 py-2" type="file" name="postImage" >
        <input class="block w-1/3 px-3 mt-3 bg-white text-black py-2" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 mt-3 bg-white text-black  h-60 px-3 py-2" type="text" placeholder="Description" name="description"></textarea>
        <button  class="block w-1/3 px-3 mt-3 bg-red-700 text-white py-2" type="submit"> submit</button>
    </form>
</div>
<%- include('../partials/footer') %>